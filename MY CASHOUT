        function lancer() {
            const montant = parseInt(document.getElementById("montant").value);
            let retour = "Entrez un montant valide.";
            if (montant === 20000) retour = "Vous recevrez 280 000 FCFA";
            else if (montant === 30000) retour = "Vous recevrez 380 000 FCFA";
            else if (montant === 50000) retour = "Vous recevrez 580 000 FCFA";
            else if (montant === 70000) retour = "Vous recevrez 780 000 FCFA";
            else if (montant === 90000) retour = "Vous recevrez 980 000 FCFA";
            else if (montant === 100000) retour = "Vous recevrez 1 500 000 FCFA";
            document.getElementById("resultat").innerText = retour;
        }
    </script>
